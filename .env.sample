# Sample .env file for Astronomy Observations API

# Flask Configuration
FLASK_APP=server.py
FLASK_ENV=development  # Change to 'production' for production environment
FLASK_DEBUG=1  # Set to 0 for production

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost/astronomy_db
TEST_DATABASE_URL=mysql+pymysql://username:password@localhost/astronomy_test

# MySQL Docker Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=astronomy_db
MYSQL_USER=astronomy
MYSQL_PASSWORD=astronomy_password

# API Configuration
API_PORT=5000
API_HOST=0.0.0.0

# Security
SECRET_KEY=your-secret-key-goes-here-make-it-complex

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/astronomy_api.log
